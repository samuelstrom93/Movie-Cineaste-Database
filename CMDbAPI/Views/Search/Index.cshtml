@model IEnumerable<CMDbAPI.ViewModel.SummarySearchViewModel>


<div class="search-container">


    @if (Model.Count() <= 0)
    {
        <p id="center">No results found for <b>"@ViewBag.search"</b> </p>
    }

        @foreach (var movie in Model)
        {
            <div class="search-movies-flexbox">

                <a href="@Url.Action("Index", "MovieDetails", new { imdbID = movie.ImdbID })">
                    <img id="searchedMovieImg" src="@movie.Poster" alt=""></a>
                <p><b>Title:</b> @movie.Title<br /><br />
                <b>Year:</b> @movie.Year<br /><br />
                <b>Type:</b> @movie.Type<br /><br />
            </div>
        }
</div>
